<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:elevation="11dp"
    android:layout_height="match_parent"
    android:backgroundTint="@null"
    android:background="@drawable/bottom_diasheet">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Accounts"
        android:fontFamily="@font/robotomono_semibold"
        android:textColor="@color/appblue"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/default_profile_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomono_regular"
        android:text="Name :"
        android:textColor="@color/appblue"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btm_profilename"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btm_profilename" />

    <TextView
        android:id="@+id/btm_profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/robotomono_regular"
        android:text="name"
        android:textColor="@color/appblue"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/googleg_standard_color_18"
        app:layout_constraintBottom_toBottomOf="@+id/btm_dialog_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btm_dialog_email" />


    <TextView
        android:id="@+id/btm_dialog_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="email"
        android:layout_marginTop="20dp"
        android:textColor="@color/appblue"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/btm_profilename" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btm_Logout_btn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/logoutbutton_bottom"
        android:fontFamily="@font/robotomono_regular"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="#F44336"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btm_dialog_email" />

</androidx.constraintlayout.widget.ConstraintLayout>